<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.transition">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_transition"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_transition"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TransitionActivity"
            android:theme="@style/AppTheme.NoActionBar.Detail" />
        <activity
            android:name=".ToolbarActivity" />
    </application>

</manifest>